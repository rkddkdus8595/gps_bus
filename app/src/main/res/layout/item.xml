<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/busName1"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#2524FF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/nanumsquare_0"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/busPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="운행여부 : "
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/busPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="첫번째 버스 위치 : "
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_marginBottom="3dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/predictTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="도착 예상 시간 : "
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/predictTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_marginBottom="3dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:text="저상버스여부 : "
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/low1"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remainSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="남은좌석 : "
            android:fontFamily="@font/nanumsquare"
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remainSeat1"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txtLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:textColor="#EAEAEA"
        android:fontFamily="@font/nanumsquare"
        android:text="-------------------------------------------------------------------" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_marginBottom="3dp"
            android:text="두번째 버스 위치 : "
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location3"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_marginBottom="3dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/predictTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:text="도착 예상 시간 : "
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/predictTime3"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/low2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nanumsquare"
            android:text="저상버스여부 :  "
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/low3"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_marginBottom="3dp"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remainSeat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentTop="true"
            android:text="남은좌석 : "
            android:layout_marginBottom="10dp"
            android:textColor="#5B5AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remainSeat3"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nanumsquare"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#B4B4B4" />

</LinearLayout>
